      <h1>Liste des participants</h1>
     
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Numero</th>
            <th>Email</th>
          </tr>
        </thead>

        <tbody>
          <% participants.forEach(function(participant) { %>
            <% let dateString = participant.date; %>
            <% let date = new Date(dateString); %>
            <% let formattedDate = ("0" + date.getDate()).slice(-2) + "/" + ("0" + (date.getMonth() + 1)).slice(-2) + "/" + date.getFullYear(); %>
            <% let formattedTime = ("0" + date.getHours()).slice(-2) + ":" + ("0" + date.getMinutes()).slice(-2) + ":" + ("0" + date.getSeconds()).slice(-2); %>
            <% let formattedDateTime = formattedDate + "-" + formattedTime; %>
            
            <tr>
              <td><%= formattedDateTime %></td>
              <td><%= participant.nom.toUpperCase() %></td>
              <td><%= participant.prenom.toUpperCase() %></td>
              <td><%= participant.telephone %></td>
              <td><%= participant.email %></td>
            </tr>
          <% }); %>
          
          
          
        </tbody>
      </table>
</body>